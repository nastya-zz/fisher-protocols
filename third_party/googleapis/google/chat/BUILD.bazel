# This build file includes a target for the Ruby wrapper library for
# google-apps-chat.

# This is an API workspace, having public visibility by default makes perfect sense.
package(default_visibility = ["//visibility:public"])

# Export yaml configs.
exports_files(glob(["*.yaml"]))

load(
    "@com_google_googleapis_imports//:imports.bzl",
    "ruby_cloud_gapic_library",
    "ruby_gapic_assembly_pkg",
    "nodejs_gapic_combined_pkg"
)

# Generates a Ruby wrapper client for chat.
# Ruby wrapper clients are versionless, but are generated from source protos
# for a particular service version, v1 in this case.
ruby_cloud_gapic_library(
    name = "chat_ruby_wrapper",
    srcs = ["//google/chat/v1:chat_proto_with_info"],
    extra_protoc_parameters = [
        "ruby-cloud-gem-name=google-apps-chat",
        "ruby-cloud-wrapper-of=v1:0.0",
    ],
    service_yaml = "//google/chat/v1:chat_v1.yaml",
    transport = "grpc+rest",
)

# Open Source package.
ruby_gapic_assembly_pkg(
    name = "google-chat-ruby",
    deps = [
        ":chat_ruby_wrapper",
    ],
)
nodejs_gapic_combined_pkg(
    name = "google-chat-nodejs",
    default_version = "v1",
    templates_excludes = ["package.json", ".OwlBot.yaml"],
    deps = [
        "//google/chat/v1:chat-v1-nodejs"
    ],
)
